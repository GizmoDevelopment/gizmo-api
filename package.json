{
  "name": "gizmo-api",
  "version": "1.2.3",
  "description": "A minimal wrapper for interfacing with the Gizmo API.",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "keywords": [
    "gizmo",
    "gizmo-api",
    "gizmo api"
  ],
  "scripts": {
    "prepare": "ts-patch install -s",
    "lint": "eslint --ext .ts,.js ./src",
    "test": "mocha ./tests/api.js",
    "build:ts-node": "tsc -p tsconfig.node.json",
    "build:ts-browser": "tsc -p tsconfig.browser.json",
    "build:js-bundle": "esbuild ./dist/index.js --bundle --minify --global-name=gizmo --outfile=./bundle/gizmo-api.bundle.js",
    "build:rename-bundle": "node ./scripts/rename-bundle.js",
    "build:fix-bundle-version-in-readme": "node ./scripts/fix-bundle-version-in-readme.js",
    "build:node": "rm -rf ./lib && pnpm build:ts-node",
    "build:browser": "rm -rf ./dist && pnpm build:ts-browser && pnpm build:js-bundle && pnpm build:rename-bundle && pnpm build:fix-bundle-version-in-readme",
    "build": "pnpm lint && pnpm build:node && pnpm build:browser && pnpm test"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=14.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GizmoDevelopment/gizmo-api"
  },
  "author": "Tjaz (GizmoTjaz)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GizmoDevelopment/gizmo-api/issues"
  },
  "homepage": "https://github.com/GizmoDevelopment/gizmo-api/#readme",
  "devDependencies": {
    "@gizmo-dev/eslint-plugin": "^3.3.2",
    "@types/node": "^14.18.36",
    "esbuild": "^0.17.0",
    "eslint": "^8.34.0",
    "mocha": "^10.2.0",
    "ts-patch": "^2.1.0",
    "typescript": "^4.9.5",
    "typescript-transform-paths": "^3.4.6"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5"
  },
  "browser": {
    "cross-fetch": false
  }
}
