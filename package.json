{
  "name": "gizmo-api",
  "version": "1.1.0",
  "description": "Simple module for interfacing with the Gizmo API.",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "keywords": [
    "gizmo",
    "gizmo-api"
  ],
  "scripts": {
    "prepare": "ts-patch install -s",
    "lint": "eslint ./src",
    "test": "mocha ./tests/api.js",
    "build:ts-node": "tsc -p tsconfig.node.json",
    "build:ts-browser": "tsc -p tsconfig.browser.json",
    "build:js-bundle": "esbuild ./dist/index.js --bundle --minify --global-name=gizmo --outfile=./bundle/gizmo-api.bundle.js",
    "build:rename-bundle": "node ./rename-bundle.js",
    "build:node": "rm -rf ./lib && npm run build:ts-node",
    "build:browser": "rm -rf ./bundle && rm -rf ./dist && npm run build:ts-browser && npm run build:js-bundle && npm run build:rename-bundle",
    "build:docs": "typedoc ./src/index.ts --theme ./node_modules/eledoc/bin/default/",
    "build": "npm run lint && npm run build:node && npm run build:browser && npm run test && npm run build:docs",
    "doc": "npm run build:docs"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=9.11.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GizmoDevelopment/gizmo-api"
  },
  "author": "Tjaz (GizmoTjaz)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GizmoDevelopment/gizmo-api/issues"
  },
  "homepage": "https://github.com/GizmoDevelopment/gizmo-api/#readme",
  "devDependencies": {
    "@gizmo-dev/eslint-config": "^1.0.21",
    "@types/node": "^14.17.9",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eledoc": "^0.2.1",
    "esbuild": "^0.12.20",
    "eslint": "^7.25.0",
    "mocha": "^9.0.3",
    "ts-patch": "^1.4.2",
    "typedoc": "^0.21.5",
    "typescript": "^4.2.4",
    "typescript-transform-paths": "^3.3.0"
  },
  "dependencies": {
    "cross-fetch": "^3.1.4"
  },
  "browser": {
    "cross-fetch": false
  }
}
