{
  "name": "gizmo-api",
  "version": "1.1.2",
  "description": "A minimal wrapper for interfacing with the Gizmo API.",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "keywords": [
    "gizmo",
    "gizmo-api",
	"gizmo api"
  ],
  "scripts": {
    "prepare": "ts-patch install -s",
    "lint": "eslint --ext .ts,.js ./src",
    "test": "mocha ./tests/api.js",
    "build:ts-node": "tsc -p tsconfig.node.json",
    "build:ts-browser": "tsc -p tsconfig.browser.json",
    "build:js-bundle": "esbuild ./dist/index.js --bundle --minify --global-name=gizmo --outfile=./bundle/gizmo-api.bundle.js",
    "build:rename-bundle": "node ./rename-bundle.js",
    "build:node": "rm -rf ./lib && npm run build:ts-node",
    "build:browser": "rm -rf ./dist && npm run build:ts-browser && npm run build:js-bundle && npm run build:rename-bundle",
    "build": "npm run lint && npm run build:node && npm run build:browser && npm run test"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=12.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GizmoDevelopment/gizmo-api"
  },
  "author": "Tjaz (GizmoTjaz)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GizmoDevelopment/gizmo-api/issues"
  },
  "homepage": "https://github.com/GizmoDevelopment/gizmo-api/#readme",
  "devDependencies": {
    "@gizmo-dev/eslint-config": "^1.0.28",
    "@types/node": "^14.18.9",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "esbuild": "^0.14.25",
    "eslint": "^8.10.0",
    "mocha": "^9.2.1",
    "ts-patch": "^2.0.1",
    "typescript": "^4.6.2",
    "typescript-transform-paths": "^3.3.1"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5"
  },
  "browser": {
    "cross-fetch": false
  }
}
