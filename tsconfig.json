{
	"compilerOptions": {
		"target": "ES2020",
		"moduleResolution": "Node",
		"module": "CommonJS",
		"strict": true,
		"declaration": true,
		"outDir": "./lib",
		"baseUrl": "./src",
		"sourceMap": true,
		"paths": {
			"@/*": ["./*"],
			"@utils/*": ["./utils/*"]
		}
	},
	"include": [
		"./src/**/*"
	]
}
